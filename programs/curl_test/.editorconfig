# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{cpp,h,hpp}]
indent_style = tab
tab_width = 4
insert_final_newline = true
#Trim trailing whitespace... because it is already done and let us keep it consistently
trim_trailing_whitespace = true